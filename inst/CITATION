citHeader("To cite rglobi in publications use:")

citEntry(entry = "Manual",
  title   = "rglobi: R interface to the aggregated biotic interaction data of GloBI
    (http://globalbioticinteractions.org)",
  author  = "Jorritt Poelen and J. Stephen Gosnell",
  year    = "2014",
  note    = "R package version 0.1.0",
  url     = "https://github.com/ropensci/rglobi",

  textVersion =
  paste("Jorritte Poelen and Stephen Gosnell (2014) rglobi: R interface to the aggregated biotic interaction data of GloBI
    (http://globalbioticinteractions.org). R package version 0.1.0. https://github.com/ropensci/rglobi")
)